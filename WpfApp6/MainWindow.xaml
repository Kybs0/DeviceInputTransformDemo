                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:local="clr-namespace:WpfApp6"
                         mc:Ignorable="d"
                         Title="MainWindow" Height="450" Width="800" x:Name="TheMainWindow">
    <Grid x:Name="RootGrid" Background="Aquamarine">
        <Button x:Name="TestButton" Content="AAAA" Height="30" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center"
